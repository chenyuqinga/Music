<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_home_music"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/img_error_music" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_home_music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_home_music_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:layout_marginBottom="61px"
        android:layout_marginRight="16px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_home_music_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_home_music_list"
            android:layout_marginRight="12px"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imgbtn_home_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_home_music_play"
            android:visibility="gone"/>

    </LinearLayout>
    <com.fotile.c2i.activity.music.view.MusicProgressView
        android:id="@+id/progressbar_home_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="290px"
        android:visibility="gone" />


</RelativeLayout>
