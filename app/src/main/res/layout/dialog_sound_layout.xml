<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/lLayout_volume"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </LinearLayout>
    <LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
   <ImageView
      android:id="@+id/img_sound_plus"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@mipmap/img_sound_plus"/>
    <com.fotile.c2i.activity.music.customview.ProgressTouchView
        android:id="@+id/progress_touchView"
        android:layout_width="120px"
        android:layout_height="440px"
        android:layout_marginTop="30px"
    />
    <ImageView
        android:id="@+id/img_sound_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_sound_minus"
        android:layout_marginTop="30px"/>
    <com.fotile.c2i.activity.music.view.ExtraBoldTextView
        android:id="@+id/img_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#87FFFFFF"
        android:textSize="36px"
        android:layout_marginTop="40px"
    />
    </LinearLayout>
</RelativeLayout>
