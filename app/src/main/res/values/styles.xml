<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Music中TabLayout自定义样式-->
    <style name="recipeTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">24px</item>
        <item name="android:textColor">@color/recipes_category_unselected</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="AppCustomTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/bg_main_activity</item>
    </style>
</resources>
